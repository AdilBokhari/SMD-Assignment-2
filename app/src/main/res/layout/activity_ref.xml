<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ref">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="References:"
        android:textSize="25dp"
        android:paddingStart="20dp"
        />
    <EditText
        android:layout_marginStart="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="References"
        android:id="@+id/etRef"
        android:inputType="textMultiLine"
        />
    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="25dp"
        android:id="@+id/btnSubmitRef"
        android:textColor="@color/black"
        android:backgroundTint="#8BC34A"
        />
    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="25dp"
        android:id="@+id/btnCancelRef"
        android:textColor="@color/black"
        android:backgroundTint="#C34A4A"
        />
</LinearLayout>